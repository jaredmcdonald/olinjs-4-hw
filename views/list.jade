extends layout

block content
	h1= title
	section.user-details
		if (username)
			| Welcome, #{username} 
			a(href='/users/new')
				| (Change users)
		else
			a(href='/users/new')
				| Log in / Register
	if (username)
		section.create-tweet
			form#createTweet(method='POST', action='/tweet/#{username}', data-userid='#{userId}')
				textarea(maxlength='140', name='tweetContent', id='tweetContent', placeholder='Tweet (140 characters max)')
				input(type='submit')

	button#showNewTweets.show-new-tweets.hide
		| Show New Tweets

	section#errorMsg.hide

	section#tweetContainer.tweet-container
		ul.tweets
			include include/_tweet-list

block js
	script(src='//code.jquery.com/jquery-1.10.2.min.js')
	script(src='/js/twit.js')